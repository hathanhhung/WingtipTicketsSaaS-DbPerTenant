{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location":    { "type": "string" },
    "serverNames": { "type": "array" },
    "adminLogins": { "type": "array" },
    "adminPasswords": { "type": "array" }
  },
  "resources": [ 
  { 
    "apiVersion": "2015-01-01", 
    "name": "[concat('Server-',parameters('serverNames')[copyIndex()])]",
    "type": "Microsoft.Resources/deployments",
    "copy": { 
      "name": "recoveryservers",
      "count": "[length(parameters('serverNames'))]"
    }, 
    "properties": { 
      "mode": "Incremental", 
      "templateLink": {
        "uri": "https://ayoframeworktestry2hdl.blob.core.windows.net/wingtipbacpacs/tenantserverrecoverytemplate.json",
        "contentVersion": "1.0.0.0"
      }, 
      "parameters": {
        "serverName": {"value": "[parameters('serverNames')[copyIndex()]]" },
        "location": {"value": "[parameters('location')]" },        
        "adminLogin": {"value": "[parameters('adminLogins')[copyIndex()]]" },
        "adminPassword": {"value": "[parameters('adminPasswords')[copyIndex()]]"}
        }
    }
  } 
  ]
}